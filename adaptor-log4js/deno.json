{
  "name": "@logtape/adaptor-log4js",
  "version": "1.1.0",
  "license": "MIT",
  "exports": "./mod.ts",
  "imports": {
    "log4js": "npm:log4js@^6.9.1"
  },
  "exclude": [
    "coverage/",
    "npm/",
    ".dnt-import-map.json"
  ],
  "tasks": {
    "build": "pnpm build",
    "test": "deno test --allow-env --allow-sys",
    "test:node": {
      "dependencies": [
        "build"
      ],
      "command": "node --experimental-transform-types --test"
    },
    "test:bun": {
      "dependencies": [
        "build"
      ],
      "command": "bun test"
    },
    "test-all": {
      "dependencies": [
        "test",
        "test:node",
        "test:bun"
      ]
    }
  }
}
