{
  "name": "@logtape/logtape",
  "version": "0.12.3",
  "license": "MIT",
  "exports": "./mod.ts",
  "imports": {
    "#util": "./util.ts"
  },
  "exclude": [
    ".test-report.xml",
    "dist/",
    "npm/"
  ],
  "tasks": {
    "build": "pnpm build",
    "test": "deno test",
    "test:node": {
      "dependencies": [
        "build"
      ],
      "command": "node --experimental-transform-types --test"
    },
    "test:bun": {
      "dependencies": [
        "build"
      ],
      "command": "bun test"
    },
    "test-all": {
      "dependencies": [
        "test",
        "test:node",
        "test:bun"
      ]
    }
  }
}
