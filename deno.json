{
  "workspace": [
    "./packages/logtape",
    "./packages/adaptor-pino",
    "./packages/adaptor-winston",
    "./packages/drizzle-orm",
    "./packages/express",
    "./packages/fastify",
    "./packages/file",
    "./packages/hono",
    "./packages/koa",
    "./packages/elysia",
    "./packages/otel",
    "./packages/pretty",
    "./packages/redaction",
    "./packages/sentry",
    "./packages/syslog",
    "./packages/cloudwatch-logs",
    "./packages/config",
    "./packages/windows-eventlog",
    "./benchmarks"
  ],
  "imports": {
    "@alinea/suite": "jsr:@alinea/suite@^0.6.3",
    "@david/which-runtime": "jsr:@david/which-runtime@^0.2.1",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9.0",
    "@opentelemetry/api-logs": "npm:@opentelemetry/api-logs@^0.208.0",
    "@opentelemetry/exporter-logs-otlp-grpc": "npm:@opentelemetry/exporter-logs-otlp-grpc@^0.208.0",
    "@opentelemetry/exporter-logs-otlp-http": "npm:@opentelemetry/exporter-logs-otlp-http@^0.208.0",
    "@opentelemetry/exporter-logs-otlp-proto": "npm:@opentelemetry/exporter-logs-otlp-proto@^0.208.0",
    "@opentelemetry/otlp-exporter-base": "npm:@opentelemetry/otlp-exporter-base@^0.208.0",
    "@opentelemetry/resources": "npm:@opentelemetry/resources@^2.2.0",
    "@opentelemetry/sdk-logs": "npm:@opentelemetry/sdk-logs@^0.208.0",
    "@opentelemetry/semantic-conventions": "npm:@opentelemetry/semantic-conventions@^1.38.0",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/async": "jsr:@std/async@^1.0.13",
    "@std/collections": "jsr:@std/collections@^1.0.10",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/fs": "jsr:@std/fs@^0.223.0",
    "@std/path": "jsr:@std/path@^1.1.0",
    "@std/semver": "jsr:@std/semver@^1.0.5",
    "@std/testing": "jsr:@std/testing@^0.222.1",
    "@types/express": "npm:@types/express@^5.0.6",
    "@types/koa": "npm:@types/koa@^2.15.0",
    "consolemock": "npm:consolemock@^1.1.0",
    "elysia": "npm:elysia@^1.4.0",
    "express": "npm:express@^5.2.1",
    "fastify": "npm:fastify@^5.0.0",
    "hono": "jsr:@hono/hono@^4.0.0",
    "koa": "npm:koa@^2.16.1",
    "tsdown": "npm:tsdown@^0.12.7"
  },
  "unstable": [
    "fs"
  ],
  "exclude": [
    "**/.test-report.xml",
    ".cov/",
    ".enricomi-publish-action-pip/",
    ".github/",
    ".test-report.xml",
    "coverage/",
    "docs/",
    "screenshots/",
    "packages/*/dist/",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml"
  ],
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md"
    ]
  },
  "tasks": {
    "check": {
      "command": "deno check && deno lint && deno fmt --check",
      "dependencies": [
        "check:versions"
      ]
    },
    "check:versions": "deno run --allow-read scripts/check_versions.ts",
    "update-versions": "deno run --allow-read --allow-write scripts/update_versions.ts",
    "build:file": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/file build"
    },
    "build:logtape": "pnpm install && deno task -f @logtape/logtape build",
    "build:otel": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/otel build"
    },
    "build:pretty": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/pretty build"
    },
    "build:redaction": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/redaction build"
    },
    "build:sentry": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/sentry build"
    },
    "build:syslog": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/syslog build"
    },
    "build:cloudwatch-logs": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/cloudwatch-logs build"
    },
    "build:config": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/config build"
    },
    "build:windows-eventlog": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/windows-eventlog build"
    },
    "build:adaptor-pino": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/adaptor-pino build"
    },
    "build:adaptor-winston": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/adaptor-winston build"
    },
    "build:drizzle-orm": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/drizzle-orm build"
    },
    "build:express": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/express build"
    },
    "build:fastify": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/fastify build"
    },
    "build:hono": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/hono build"
    },
    "build:koa": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/koa build"
    },
    "build:elysia": {
      "dependencies": [
        "build:logtape"
      ],
      "command": "deno task -f @logtape/elysia build"
    },
    "build": {
      "dependencies": [
        "build:file",
        "build:logtape",
        "build:otel",
        "build:pretty",
        "build:redaction",
        "build:sentry",
        "build:syslog",
        "build:cloudwatch-logs",
        "build:config",
        "build:windows-eventlog",
        "build:adaptor-pino",
        "build:adaptor-winston",
        "build:drizzle-orm",
        "build:express",
        "build:fastify",
        "build:hono",
        "build:koa",
        "build:elysia"
      ]
    },
    "coverage": "rm -rf coverage && deno task test --coverage && deno coverage --html coverage",
    "test": "deno test --allow-read --allow-write --allow-net --allow-env --allow-sys --allow-ffi --allow-run=powershell",
    "test:node": "pnpm run -r test",
    "test:bun": "pnpm run -r test:bun",
    "test-all": {
      "dependencies": [
        "check",
        "test",
        "test:node",
        "test:bun"
      ]
    },
    "publish": {
      "command": "deno publish",
      "dependencies": [
        "check",
        "test"
      ]
    },
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": {
      "dependencies": [
        "check"
      ]
    },
    "hooks:pre-push": {
      "dependencies": [
        "check",
        "test"
      ]
    }
  }
}
