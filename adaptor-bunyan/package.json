{
  "name": "@logtape/adaptor-bunyan",
  "version": "1.1.0",
  "description": "Bunyan adapter for LogTape logging library",
  "keywords": [
    "logging",
    "log",
    "logger",
    "bunyan",
    "adapter",
    "logtape",
    "sink"
  ],
  "license": "MIT",
  "author": {
    "name": "Hong Minhee",
    "email": "hong@minhee.org",
    "url": "https://hongminhee.org/"
  },
  "homepage": "https://logtape.org/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dahlia/logtape.git",
    "directory": "adaptor-bunyan/"
  },
  "bugs": {
    "url": "https://github.com/dahlia/logtape/issues"
  },
  "funding": [
    "https://github.com/sponsors/dahlia"
  ],
  "type": "module",
  "module": "./dist/mod.js",
  "main": "./dist/mod.cjs",
  "types": "./dist/mod.d.ts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/mod.d.ts",
        "require": "./dist/mod.d.cts"
      },
      "import": "./dist/mod.js",
      "require": "./dist/mod.cjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "peerDependencies": {
    "@logtape/logtape": "workspace:",
    "bunyan": "^1.8.15"
  },
  "devDependencies": {
    "@alinea/suite": "catalog:",
    "@std/assert": "catalog:",
    "@std/async": "catalog:",
    "bunyan": "^1.8.15",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "scripts": {
    "build": "tsdown",
    "prepack": "tsdown",
    "prepublish": "tsdown",
    "test": "tsdown && node --experimental-transform-types --test",
    "test:bun": "tsdown && bun test",
    "test:deno": "deno test --allow-env --allow-sys",
    "test-all": "tsdown && node --experimental-transform-types --test && bun test && deno test"
  }
}
